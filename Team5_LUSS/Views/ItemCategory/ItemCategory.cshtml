@{
    ViewData["Title"] = "Item Category";
    var Model = (List<ItemCategory>)ViewData["products"];
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    }
    <h2>All Reservations</h2>
    <a asp-action="AddItemCategory" class="btn btn-sm btn-primary">Add ItemCategory</a>
    <a asp-action="GetItemCategory" class="btn btn-sm btn-secondary">Get ItemCategory</a>

    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.CategoryID</td>
                    <td>@r.CategoryName</td>
                    <td>
                        <a asp-action="UpdateItemCategory" asp-route-id="@r.CategoryID">
                           Update
                        </a>
                    </td>
              
                    <td>
                        <form asp-action="DeleteItemCategory" method="post">
                            <input type="hidden" value="@r.CategoryID" name="ItemCategoryID" />
                            <button type="submit" class="btn btn-sm btn-primary">Delete</button>
                        </form>
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
