@{
    ViewData["Title"] = "Item Category Add";
    var Model = (ItemCategory)ViewData["products"];
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h2>Add a Reservation <a asp-action="ItemCategory" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddItemCategory" method="post">
    <div class="form-group">
        <label for="ID">ID:</label>
        <input class="form-control" name="CategoryID" />
    </div>
    <div class="form-group">
        <label for="Name">Name:</label>
        <input class="form-control" name="CategoryName" />
    </div>

    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

@if(Model != null)
{
    <h2>Item Category</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>

            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.CategoryID</td>
                <td>@Model.CategoryName</td>
            </tr>
        </tbody>
    </table>
}