@{
    Layout = "~/Views/Shared/_Layout.cshtml";
  

   // ViewData["Title"] = "AdjustVoucherListingClerk";
    var adjustmentVoucherList = (List<AdjustmentVoucher>)ViewData["allAdjustments"];
}


<div class="container-fluid site-width">

    <div class="modal fade" id="editinvoice">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="icon-pencil"></i> Stationary Collection Form
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i class="icon-close"></i>
                    </button>
                </div>
                <form action="VoucherForm">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Item Code</th>
                                        <th scope="col">Item Name</th>
                                        <th scope="col">Rqt Qty</th>
                                        <th scope="col">Accpt Qty</th>
                                    </tr>
                                </thead>
                                @foreach (var r in adjustmentVoucherList)
                                {
                                    <tbody>
                                        <tr>
                                            <th scope="row">@r.AdjustmentID</th>
                                            <td>@r.Status</td>
                                            <td>@r.TotalCost</td>
                                            <td>@r.AdjustQty</td>
                                            <td>@r.AdjustType</td>
                                            <td>
                                                <button type="button" class="btn btn-danger"  @* DETAIL VIEW*@
                                                        onclick="location.href='@Url.Action("VoucherApproveDetails", "AdjustmentList", new { AdjustmentID = @r.AdjustmentID})'"> Details</button>
                                            </td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                    @*<div class="modal-footer">
                        <input type="hidden" id="edit-date">
                        <button type="submit" class="btn btn-primary add-todo">Approve</button>
                        <button type="submit" class="btn btn-primary add-todo">Reject</button>
                    </div>*@
                </form>
            </div>
        </div>
    </div>

</div>