@{
    ViewData["Title"] = "Create Purchase Order";
    Item item = (Item) ViewData["item"];
}
<form>
    <div class="container-fluid site-width">
        <div>
            <div class="row">
                <div class="col-12 col-md-12">
                    <div class="card border-0">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h4 class="card-title">@ViewData["Title"]<span class="inv-no"></span></h4>
                        </div>
                        <div class="card-body table-responsive">
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <td>
                                            <b>Expected Date:</b> <input type="date" /><br>
                                            <b>Supplier Name:</b> <select></select><br>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                @*table content*@
                <div class="col-12 col-md-12">
                    <div class="card border-0">
                        <div class="card-body table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <td><b>Item Code</b></td>
                                        <td><b>Description</b></td>
                                        <td class="text-right"><b>UOM</b></td>
                                        <td class="text-right"><b>Reorder Qty</b></td>
                                        <td class="text-right"><b>Order Qty</b></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-right">@item.ItemID <input type="hidden" name="itemID" value="@item.ItemID"></td>
                                        <td class="text-right">@item.ItemName</td>
                                        <td class="text-right">@item.UOM</td>
                                        <td class="text-right">@item.ReStockQty</td>
                                        <td class="text-right"><input type="number" name="orderQty" min="0" max="@item.ReStockQty" /></td>
                                    </tr>
                                    <tr>
                                        <td>P021</td>
                                        <td class="text-right">Paper Clip</td>
                                        <td class="text-right">Dozen</td>
                                        <td class="text-right">10</td>
                                        <td class="text-right"><input type="number" value="10" min="0" /></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div>
                            <div class="text-right p-5">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                                <input type="hidden" id="edit-date">
                                <button type="submit" class="btn btn-success add-todo">Confirm</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

