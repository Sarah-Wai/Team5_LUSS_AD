@{
    ViewData["Title"] = "Item Category Add";
    
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@model ItemCategory
<h2>Update a Item Category</ <a asp-action="ItemCategory</" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label asp-for="CategoryID"></label>
        <input class="form-control" asp-for="CategoryID" readonly />
    </div>
    <div class="form-group">
        <label asp-for="CategoryName"></label>
        <input class="form-control" asp-for="CategoryName" />
    </div>
   
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>

@if (ViewBag.Result == "Success")
{
    <h2>Item Category</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.CategoryID</td>
                <td>@Model.CategoryName</td>
            </tr>
        </tbody>
    </table>
}