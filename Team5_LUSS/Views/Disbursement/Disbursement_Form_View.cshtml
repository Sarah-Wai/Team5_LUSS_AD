@{
    ViewData["Title"] = "Disbursement Form";
    Request request = (Request)ViewData["request"];
    User deptRep = (User)ViewData["deptRep"];
    List<RequestDetails> reqItems = (List<RequestDetails>)ViewData["reqItems"];
    int? receivedBy = null; @*to update*@
}

@if (request != null)
{
    <div class="container-fluid site-width">
        <div>
            <div class="row">
                <div class="col-12 col-md-12">
                    <div class="card border-0">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h4 class="card-title">@ViewData["Title"]<span class="inv-no"></span></h4>
                        </div>
                        <div class="card-body table-responsive">
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <td>
                                            <b>Dept Name:</b> @request.RequestByUser.Department.DepartmentName<br>
                                            <b>Dept Code:</b> @request.RequestByUser.DepartmentID<br>

                                            <b>Dept Rep:</b> @deptRep<br>
                                            <b>Collection Point:</b> @deptRep.Department.CollectionPoint.Description<br><br>
                                            <b>Collection Date</b> @request.CollectionTime<br>
                                        </td>
                                        <td>
                                            <b>Staff Name:</b> @request.ModifiedByUser.FirstName  @request.ModifiedByUser.LastName<br>
                                            <b>Staff ID:</b> @request.ModifiedBy<br>
                                            <b>Staff Email:</b>@request.ModifiedByUser.Email<br><br><br>
                                            <b>Status:</b> @request.RequestStatus<br>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            }
                        </div>
                    </div>
                </div>
                @*table content*@
                <div class="col-12 col-md-12">
                    <div class="card border-0">
                        <div class="card-body table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <td><b>Item Code</b></td>
                                        <td><b>Description</b></td>
                                        <td class="text-right"><b>UOM</b></td>
                                        <td class="text-right"><b>Requested Qty</b></td>
                                        <td class="text-right"><b>Fulfilled Qty</b></td>
                                        <td class="text-right"><b>Received Qty</b></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (RequestDetails r in reqItems)
                                    {
                                    <tr>
                                        <td>@r.RequestID</td>
                                        <td class="text-right">@r.Item.ItemName</td>
                                        <td class="text-right">@r.Item.UOM</td>
                                        <td class="text-right">@r.RequestQty</td>
                                        <td class="text-right">@r.FullfillQty</td>
                                        <td class="text-right">@r.ReceivedQty</td>
                                    </tr>
                                    }
                                    @if (receivedBy != null)
                                    {
                                    <tr>
                                        <td colspan="6"> Received by: @receivedBy </td>
                                    </tr>        
                                    }
                                </tbody>
                            </table>
                        </div>
                        @if (request.RequestStatus == Status.EOrderStatus.Received)
                        {
                        <div class="text-right p-5">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Deny</button>
                            <input type="hidden" id="edit-date">
                            <button type="submit" class="btn btn-success add-todo">Complete</button>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

}
